<UserControl x:Class="ExplorerGX.Desktop.Windows.SideToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExplorerGX.Desktop.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border
        Panel.ZIndex="-1"
        HorizontalAlignment="left"
        BorderThickness="0 0 1 0"
        BorderBrush="{StaticResource BrushSuperDark}">

        <Border
            Width="55"
            Background="{StaticResource BrushDarker}"
            Padding="7 10">
                
            <StackPanel>

                <Button Style="{StaticResource AddBookmarkButton}"  />
            </StackPanel>
        </Border>
    </Border>
</UserControl>
